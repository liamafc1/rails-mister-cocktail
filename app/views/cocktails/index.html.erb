    Cocktails & Dreams
  </a>
</nav>

<body>
<div class="container app-body">
<h1>Cocktails & Dreams</h1>


<%=link_to new_cocktail_path, class: "btn btn-light mb-4" do%>
  Create a Cocktail <i class="fas fa-glass-martini-alt"></i>
<% end %>
 <div class="d-flex justify-content-center flex-wrap">
  <% @cocktails.each do |cocktail| %>
    <%=link_to cocktail_path(cocktail) do%>

    <% if cocktail.photo.present? %>
       <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.4), rgba(0,0,0,0.3)), url('<%= cl_image_path cocktail.photo.key, height: 300, width: 400, crop: :fill %>')">
        <%= cocktail.name %>
      </div>
    <% else%>
      <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.4), rgba(0,0,0,0.3)), url('https://images.unsplash.com/photo-1470337458703-46ad1756a187?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=1349&q=80')">
        <%= cocktail.name %>
      </div>
    <% end%>
    <% end %>
  <% end %>
 </div>
</div>
