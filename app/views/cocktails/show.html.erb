<h1><%= @cocktail.name %></h1>

<ul>
  <% @cocktail.doses.each do |dose| %>
    <li>
      <%= dose.ingredient.name %>
      <small>
        <%= link_to '<i class="fas fa-trash-alt"></i>'.html_safe, dose_path(dose), method: :delete %>
      </small>
    </li>
  <% end %>
</ul>

<%= link_to "Add a New Dose", new_cocktail_dose_path(@cocktail), class: "btn btn-primary" %> |
<%= link_to "Back to List", cocktails_path, class: "btn btn-primary" %>
