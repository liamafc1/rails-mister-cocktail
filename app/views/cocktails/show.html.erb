<div class="container col-11 pt-5">
  <h1><strong><%= @cocktail.name %></strong></h1>
  <h2>Ingredients:</h2>
  <ul>
    <% @cocktail.doses.each do |dose| %>
    <li><%= dose.description %> - <%= dose.ingredient.name %> <%= link_to("Delete", dose, method: :delete, data: { confirm: 'Are you sure you want to delete?'}) %>
    </li>
    <% end %>
  </ul>

  <%= link_to("Add a dose", new_cocktail_dose_path(@cocktail)) %> |
  <%= link_to("Back", cocktails_path) %>
</div>
